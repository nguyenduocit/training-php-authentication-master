{
  "name": "rikkeisoft/training-php-authentication",
  "description": "A Slim Framework skeleton application for rapid development",
  "keywords": [
    "microframework",
    "rest",
    "router",
    "psr7"
  ],
  "homepage": "http://github.com/rikkeisoft/training-php-authentication",
  "license": "MIT",
  "authors": [
    {
      "name": "Oanh Nguyen",
      "email": "oanhnn.bk@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.6",
    "slim/slim": "^3.1",
    "slim/php-view": "^2.0",
    "monolog/monolog": "^1.17",
    "slim/csrf": "^0.8.1",
    "akrabat/rka-slim-session-middleware": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpunit": "php vendor/phpunit/phpunit/phpunit",
    "test": [
      "@composer run-script phpunit"
    ]
  }
}
